@model List<MyApP.Models.Item>
@{
	ViewData["Title"]="Index";
}

<h3>Index</h3>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Serial Number</th>
		</tr>
	</thead> 
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Price.ToString("N2") $</td>
				<td>@item.serialNumber?.Name</td>
				<td>
					<a asp-action="Edit"  class="btn btn-success" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Delete" class="btn btn-success" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
		<a asp-action="Create" class="btn btn-success">Create Item</a>
	</tbody>
</table>